{
  "extends": "@enei/typescript-config/client/tsconfig.react-library.json",
  "compilerOptions": {
    // Type Checking
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,

    // Modules
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Emit
    "outDir": "./node_modules/.tmp/tsconfig.app/build",

    // Interop Constraints
    "verbatimModuleSyntax": false,

    // Projects
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
  },
  "include": ["src", "lib"]
}
