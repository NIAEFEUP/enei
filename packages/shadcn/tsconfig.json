{
  "extends": ["@enei/typescript-config/env/client", "@enei/typescript-config/type/bundled"],
  "compilerOptions": {
    // Type Checking
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // "strictNullChecks": true,

    // Modules
    "baseUrl": ".",
    "paths": {
      "#/components/*": ["./src/components/*.tsx"],
      "#/data/*": ["./src/data/*"],
      "#/hooks/*": ["./src/hooks/*.ts"],
      "#/lib/*": ["./src/lib/*.ts"]
    },

    "rootDir": "./src",

    // Emit
    "outDir": "./dist",

    // Interop Constraints
    "verbatimModuleSyntax": false,

    // Projects
    "tsBuildInfoFile": "./dist/tsconfig.lib.tsbuildinfo"
  },
  "include": ["src/**/*", "src/**/*.json"]
}
